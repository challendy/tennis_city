%h2 Sign in
#login
  - form_for resource_name, resource, :url => session_path(resource_name) do |f|
    %fieldset
      %ul#user
        %li
          = f.label :email
          = f.text_field :email
        %li
          = f.label :password
          = f.password_field :password

        %ul#remember
          %li.login
            = f.check_box :remember_me 
            = f.label :remember_me
          %li
            = f.submit "Sign in"
            = render :partial => "shared/devise_links"