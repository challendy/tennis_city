%h2 Sign in

- form_for resource_name, resource, :url => session_path(resource_name) do |f|
  %fieldset
    %ol
      %li
        = f.label :email
        = f.text_field :email
      %li
        = f.label :password
        = f.password_field :password

      - if devise_mapping.rememberable?
        %li
          = f.check_box :remember_me 
          = f.label :remember_me

      %li= f.submit "Sign in"

= render :partial => "shared/devise_links"